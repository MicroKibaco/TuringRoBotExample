<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.TulingRoBotActivity">

    <RelativeLayout
            android:id="@+id/main_top"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/black"
            >

        <TextView
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="小木箱"
                android:textSize="22sp"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/mian_bottom"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        <Button
                android:text="发送"
                android:background="@drawable/chat_bottom_textfield"
                android:layout_alignParentRight="true"
                android:id="@+id/send_msg"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                />

        <EditText
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@id/send_msg"
                android:layout_height="40dp"
                android:background="@drawable/chat_bottom_textfield"
                android:id="@+id/input_msg"/>


    </RelativeLayout>

    <ListView
            android:dividerHeight="5dp"
            android:layout_above="@id/mian_bottom"
            android:id="@+id/mian_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/main_top"
            android:divider="@null"
            />
</RelativeLayout>
